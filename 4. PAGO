Algoritmo sin_titulo
	
	// algoritmo que resuelva el siguiente problema: C�lculo de los salarios mensuales de los empleados de una empresa, 
	//sabiendo que �stos se calculan en base a las horas semanales trabajadas y de acuerdo a un precio especificado por horas. 
	//Si se pasan de cuarenta horas semanales, las horas extraordinarias se pagar�n a raz�n de 1,5 veces la hora ordinaria.
	
	Definir nom_emp Como caracter;
	
	Definir hor_tra Como real;
	hor_tra=0;
	
	Definir prec_hor Como real;
	prec_hor=0;
	
	Definir salario Como real;
	salario=0;
	
	Definir hor_ext Como real;
	hor_ext=0;
	
	Definir prec_ext Como real;
	prec_ext=0;
	
	Definir sal_tot Como real;
	sal_tot=0;
	
	
	Escribir "                              BIENVENIDO: ";
	Escribir "";
	Escribir "";
	Escribir "DIGITE EL NOMBRE DEL EMPLEADO: ";
	leer nom_emp;
	
	Escribir "";
	Escribir "";
    Escribir "DIGITE EL NUMERO DE HORAS TRABAJADAS: ";
	leer hor_tra;
	
	Escribir "";
	Escribir "";
    Escribir "DIGITE EL PRECIO POR HORA: ";
	leer prec_hor;
	Escribir "________________________________________________________________________________________________";
	Escribir "________________________________________________________________________________________________";

	
	Si hor_tra > 120 Entonces
		hor_ext = hor_tra - 120;
		salario = prec_hor * 120;
		prec_ext = hor_ext * prec_hor * 1.5;
		sal_tot = salario + prec_ext;
		
		Escribir "";
		Escribir "";
		
		Escribir "INFORMACION DE PAGO DEL EMPLEADO: " nom_emp;
		Escribir "";
		Escribir "";
		
		Escribir "HORAS TRABAJADAS: " hor_tra;
		Escribir "";
		Escribir "";
		
		Escribir "PRECIO POR HORA: " prec_hor;
		Escribir "";
		Escribir "";
		
		Escribir "SALARIO ORDINARIO: " salario;
		Escribir "";
		Escribir "";
		
		Escribir "HORAS EXTRA TRABAJADAS: " hor_ext;
		Escribir "";
		Escribir "";
		
		Escribir "VALOR HORAS EXTRA: " prec_ext;
		Escribir "";
		Escribir "";
		
		Escribir "SALARIO TOTAL: " sal_tot;
		Escribir "";
		Escribir "";
		
		
		
		Escribir "";
		Escribir "";
		
		
	SiNo
		salario = prec_hor * hor_tra;
		
		Escribir "";
		Escribir "";
		
		Escribir "INFORMACION DE PAGO DEL EMPLEADO: " nom_emp;
		Escribir "";
		Escribir "";
		
		Escribir "HORAS TRABAJADAS: " hor_tra;
		Escribir "";
		Escribir "";
		
		Escribir "PRECIO POR HORA: " prec_hor;
		Escribir "";
		Escribir "";
		
		Escribir "HORAS EXTRA TRABAJADAS: " hor_ext;
		Escribir "";
		Escribir "";
		
		Escribir "VALOR HORAS EXTRA: " prec_ext;
		Escribir "";
		Escribir "";
		
		Escribir "SALARIO TOTAL: " salario;
		Escribir "";
		Escribir "";
		
		
		
		Escribir "";
		Escribir "";
	Fin Si
	
	
	
FinAlgoritmo
